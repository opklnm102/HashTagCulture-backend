package jdbcTest;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;

public class jdbcTest {
	public static void main(String[] args) {
		try {
			Connection con = null;

			//con = DriverManager.getConnection("jdbc:mysql://52.192.175.169","rain", "rain1234");
			con= DriverManager.getConnection("jdbc:mysql://52.192.175.169/?user=rain&password=rain1234");
			java.sql.Statement st = null;
			ResultSet rs = null;
			st = con.createStatement();
			//st.executeUpdate("CREATE DATABASE test");
			rs = st.executeQuery("SHOW DATABASES");

			if (st.execute("SHOW DATABASES")) {
				rs = st.getResultSet();
			}

			while (rs.next()) {
				String str = rs.getNString(1);
				System.out.println(str);
				
			}
			st.executeQuery("USE hashtagculture");
			
			
			//st.executeUpdate("CREATE TABLE list_table (id VARCHAR(255) PRIMARY KEY NOT NULL, title VARCHAR(225),category VARCHAR(225),location VARCHAR(225), startdate int(8), enddate int(8));");
			//st.executeUpdate("CREATE TABLE User (id int(10) PRIMARY KEY NOT NULL, FirstName VARCHAR(225),LastName VARCHAR(225));");
			rs = st.executeQuery("SHOW TABLES");

			if (st.execute("SHOW TABLES")) {
				rs = st.getResultSet();
			}

			while (rs.next()) {
				String str = rs.getNString(1);
				System.out.println(str);
				
			}
			
			/*st.executeUpdate("insert into list_table values('1','연극 술래잡기 in 대학로','연극', '서울', 20131025, 20151231)");
			st.executeUpdate("insert into list_table values('2','뮤지컬 비밥(Bibap)','연극', '서울', 20140201, 20151231)");*/
			
			st.executeUpdate("insert into User values(1, 'Saul', 'Goodman');");
			st.executeUpdate("insert into User values(2, 'Walter', 'White');");
			st.executeUpdate("insert into User values(3, 'Jessie', 'Pinkman');");
			st.executeUpdate("insert into User values(4, 'Skyler', 'White');");
			
			rs = st.executeQuery("select * from User");
			
			if (st.execute("select * from User")) {
				rs = st.getResultSet();
			}

			while (rs.next()) {
				String str = rs.getNString(1);
				System.out.println(str);
				
			}
			
			
			
			
		} catch (SQLException sqex) {
			System.out.println("SQLException: " + sqex.getMessage());
			System.out.println("SQLState: " + sqex.getSQLState());
		}

	}
}