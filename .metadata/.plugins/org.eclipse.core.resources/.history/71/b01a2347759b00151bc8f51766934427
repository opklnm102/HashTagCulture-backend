package spring.hashcul.service;
import java.util.HashMap;
import java.util.Map;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.PUT;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import spring.hashcul.dao.ListDao;
 

 
@Path("/list")
public class ListService {
        static ListDao dao = null;
        public void setContactDao(ListDao dao){this.dao = dao;}
        public ListService(){
               //if(dao == null)      setContactDao(new ContactDao());
        }
       
        /**
         * Query Contact record by email id
         * @param email
         * @return
         */
        @GET
        @Produces(MediaType.APPLICATION_JSON)
        @Path("{email}")
        public ListVoInfo get(@PathParam("categories") String[] categories, @PathParam("locations") String[] locations, @PathParam("startdate")int startdate, @PathParam("enddate") int enddate ){
        	
        	HashMap<String, Object> parameter = new HashMap<String, Object>();
        	
        	parameter.put("categories", categories);
        	parameter.put("locations", locations);
        	parameter.put("startdate", startdate);
        	parameter.put("enddate", enddate);
        		
        	
        	
               return dao.getList(parameter);
        }

}