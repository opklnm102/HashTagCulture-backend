<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="listdao">
        <!-- 
               select list by category startdate enddate
        -->
        
         <resultMap  id="ListMap" type="java.util.HashMap">
               <collection property="attachList" javaType="java.util.ArrayList" resultMap="attachResultMap"/>
        </resultMap>
        
        <resultMap id="attachResultMap" type="java.util.HashMap">
         	   <id property="id" column="id" />
               <result column="title" property="title"/>
               <result column="category" property="category"/>
               <result column="location" property="location"/>
               <result column="startdate" property="startdate"/>
               <result column="enddate" property="enddate"/>
		</resultMap>
        
        
       <!--  parameterType 정의해줄 -->
        <select id="getList"  parameterType="hashMap" resultMap="ListMasp">
               select *
               from list_table
               where category = ${category}
               AND location = ${location}
               AND startdate <![CDATA[ >= ]]> ${startdate}
               AND enddate <![CDATA[ <= ]]> ${enddate}
        </select>
</mapper>